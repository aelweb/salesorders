<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.sap.ordersales.controller.Deliveries" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showNavButton="true" navButtonPress="onNavBack">
				<content>
				    <VBox width="100%" direction="Column" id="vbox0">
				        <items>
				            <ObjectHeader xmlns="sap.m" id="header0" title="{SalesOrderID}">
				                <statuses>
				                    <ObjectStatus state="Success" id="status0" text="{DeliveryStatusDescription}"/>
				                    
				                </statuses>
				                </ObjectHeader>
				            <Table noDataText="Drop column list items here and columns in the area above" id="table0" items="{path:'ToLineItems',parameters:{select:'ItemPosition,ProductID,DeliveryDate'},sorter:[{path:'ItemPosition',descending:false}]}">
				                <items>
				                    <ColumnListItem type="Active" id="item0">
				                        <cells>
				                            <Text id="text3" text="{ItemPosition}"/>
				                            <Text id="text4" text="{ProductID}"/>
				                            <Text id="text5" text="{path : 'Delivery-Date', type : 'sap.ui.model.type.Datetime', formatOptions : {style : 'medium'}}"/></cells>
				                    </ColumnListItem>
				                </items>
				                <columns>
				                    <Column id="column0">
				                        <header>
				                            <Label id="label0" text="{/#SalesOrderLineItem/ItemPosition/@sap:label}"/>
				                        </header>
				                    </Column>
				                    <Column id="column1">
				                        <header>
				                            <Label id="label1" text="{/#SalesOrderLineItem/ProductID/@sap:label}"/>
				                        </header>
				                    </Column>
				                    <Column id="column2">
				                        <header>
				                            <Label id="label2" text="{/#SalesOrderLineItem/DeliveryDate/@sap:label}"/>
				                        </header>
				                    </Column></columns></Table>
				        </items>
				    </VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>